{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FE debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/fantamd-fe/node_modules/next/dist/bin/next",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/fantamd-fe"
      },
      "cwd": "${workspaceFolder}/fantamd-fe"
    }
  ]
}
